@model IEnumerable<Proyecto_web_MVC_1P.Models.Proyecto_web_MVC_1P.Models.Usuario>

@{
	ViewData["Title"] = "Index";
}

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.NombreUsuario)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Email)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Contraseña)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Telefono)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.NombreUsuario)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Email)
				</td>
				<td>
					@Html.Raw(new string('*', item.Contraseña.Length))
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Telefono)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a> |
					<a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Detalles</a> |
					<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
				</td>
			</tr>
		}
	</tbody>
</table>
<br />
<p>
	<a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

@section Styles {
	<link href="@Url.Content("~/css/index.css")" rel="stylesheet" />
}
